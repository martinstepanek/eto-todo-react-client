{
  "name": "eto-todo-react-client",
  "version": "0.1.0",
  "author": "Martin Štěpánek",
  "engines": {
    "node": "13.7.0",
    "npm": "6.13.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "lint": "eslint .",
    "analyze": "react-scripts analyze",
    "format": "prettier --write '*/**/*.{ts,tsx,css,md,json}'",
    "type-check": "tsc"
  },
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@steveeeie/react-page-transition": "^1.2.0",
    "@strv/react-scripts": "^3.0.0",
    "formik": "^2.1.7",
    "graphql": "^15.3.0",
    "lodash": "^4.17.20",
    "lodash.throttle": "^4.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-google-login": "^5.1.21",
    "react-ripples": "^2.2.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-typing-effect": "^2.0.3",
    "sanitize.css": "^8.0.0",
    "styled-components": "^4.1.2",
    "yup": "^0.28.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^7.1.2",
    "@strv/eslint-config-javascript": "^9.1.1",
    "@types/jest": "^23.3.10",
    "@types/lodash.throttle": "^4.1.6",
    "@types/node": "^10.17.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-typing-effect": "^2.0.0",
    "@types/styled-components": "^4.1.4",
    "@types/webpack-env": "^1.15.3",
    "@types/yup": "^0.26.37",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint-config-prettier": "^3.3.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "@strv/javascript/environments/react/v16",
      "prettier",
      "prettier/react"
    ],
    "root": true,
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "overrides": [
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "react/jsx-filename-extension": "off",
          "react/prop-types": "off"
        }
      }
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {}
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "homepage": "/"
}
